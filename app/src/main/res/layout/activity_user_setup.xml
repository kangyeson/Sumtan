<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    tools:context=".user.UserSetupActivity">

    <LinearLayout
        android:layout_width="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_margin="20dp"
            android:layout_height="60dp"
            android:src="@drawable/big_logo"
            android:layout_gravity="center_horizontal"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="150dp"
        android:background="#ffffff"
        >

        <!--이름-->
        <LinearLayout
            android:layout_marginTop="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <EditText
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:background="@drawable/input_radius"
                android:padding="10dp"
                android:hint="이름"
                android:fontFamily="@font/unbee"
                android:layout_gravity="center"
                android:textColor="#000000"
                android:id="@+id/userName"
                />
        </LinearLayout>

        <!--전화번호-->
        <LinearLayout
            android:layout_marginTop="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <EditText
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:background="@drawable/input_radius"
                android:padding="10dp"
                android:hint="전화번호"
                android:inputType="phone"
                android:fontFamily="@font/unbee"
                android:textColor="#000000"
                android:maxLength="13"
                android:id="@+id/userTele"
                />
        </LinearLayout>

        <Button
            android:id="@+id/setup_btn"
            android:layout_marginTop="50dp"
            android:layout_width="105dp"
            android:layout_height="50dp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:fontFamily="@font/bmhanna"
            android:textColor="#000000"
            android:background="@drawable/lj_radius"
            android:text="회원가입"
            android:layout_gravity="center"/>

    </LinearLayout>

</LinearLayout>