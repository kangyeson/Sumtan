<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="270dp"
    android:layout_height="600dp"
    android:weightSum="10"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="15dp"
    android:background="@drawable/address_card_border">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_weight="1">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="시/도"
            android:textSize="12sp"
            android:gravity="center"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="시/군/구"
            android:textSize="12sp"
            android:gravity="center"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="8">

        <androidx.core.widget.NestedScrollView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <RadioGroup
                android:id="@+id/address1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

                <Button
                    android:id="@+id/seoul"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#00FF0000"
                    android:text="서울"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/gyeonggi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#00FF0000"
                    android:text="경기"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/incheon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#00FF0000"
                    android:text="인천"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/gangwon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#00FF0000"
                    android:text="강원"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/daejeon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#00FF0000"
                    android:text="대전"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/sejong"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#00FF0000"
                    android:text="세종"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/chungnam"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#00FF0000"
                    android:text="충남"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/chungbuk"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#00FF0000"
                    android:text="충북"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/busan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#00FF0000"
                    android:text="부산"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/ulsan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#00FF0000"
                    android:text="울산"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/gyeongnam"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#00FF0000"
                    android:text="경남"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/geyongbuk"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#00FF0000"
                    android:text="경북"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/daegu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#00FF0000"
                    android:text="대구"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/gwangju"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#00FF0000"
                    android:text="경주"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/jeonllanam"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#00FF0000"
                    android:text="전남"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/jeollabuk"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#00FF0000"
                    android:text="전북"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/jeju"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#00FF0000"
                    android:text="제주"
                    android:textSize="12sp" />
            </RadioGroup>
        </androidx.core.widget.NestedScrollView>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="vertical"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1">

        <Button
            android:id="@+id/address_card_down"
            android:text="확인"
            android:background="#00FF0000"
            android:layout_width="270dp"
            android:layout_height="match_parent"
            android:onClick="OnClose"/>

    </LinearLayout>



</LinearLayout>
